set $left h
set $down j
set $up k
set $right l
set $term kitty
# set $menu wmenu-run
set $menu wofi -S drun -p Search -I -b -i

set $wallpaper ~/Nextcloud/wallpapers/laptop/hiroishi_nagasai.png
set $laptop eDP-1

# Color Scheme
